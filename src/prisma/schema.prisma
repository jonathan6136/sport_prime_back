generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String    // Stockera le hash bcrypt
  name     String?
  workouts Workout[]
}

model Workout {
  id        Int      @id @default(autoincrement())
  title     String   // Ex: "Séance Pectoraux"
  date      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  exercises Json[]   // Stockage simple des exercices (Nom, Séries, Reps)
}